<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_yellow_corner_16_left_top_right"
        android:fontFamily="sans-serif-condensed"
        android:text="Nhập bình luận ở đây!" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Hãy gửi ý kiến của bạn"/>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Bình luận"
            android:background="@drawable/bg_white_corner_10_gray"
            android:padding="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_nothanks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:backgroundTint="#A699AC"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="Không"/>
            <Button
                android:id="@+id/btn_commentyes"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:fontFamily="sans-serif-condensed"
                android:text="Gửi"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
